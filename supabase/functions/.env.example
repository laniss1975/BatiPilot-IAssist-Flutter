# =========================
# Supabase Configuration
# =========================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =========================
# LLM Provider Configuration
# =========================
# Choose your default provider: openai, gemini, or claude
DEFAULT_LLM_PROVIDER=openai

# OpenAI Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...
# Default model: gpt-4o-mini, gpt-4o, gpt-3.5-turbo
DEFAULT_OPENAI_MODEL=gpt-4o-mini

# Google Gemini Configuration
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIza...
# Default model: gemini-1.5-flash, gemini-1.5-pro
DEFAULT_GEMINI_MODEL=gemini-1.5-flash

# Anthropic Claude Configuration
# Get your API key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...
# Default model: claude-3-5-sonnet-20241022, claude-3-haiku-20240307
DEFAULT_CLAUDE_MODEL=claude-3-5-sonnet-20241022

# LLM Generation Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# =========================
# Admin Configuration
# =========================
# Secret for admin-only endpoints (e.g., /tools/upsert-embedding)
# Generate with: openssl rand -hex 32
X_ADMIN_SECRET=your-secret-here

# =========================
# Optional: Embeddings Configuration
# =========================
# Provider for embeddings (if different from main LLM)
EMBEDDINGS_PROVIDER=openai
# OpenAI: text-embedding-3-small, text-embedding-3-large
EMBEDDINGS_MODEL=text-embedding-3-small
